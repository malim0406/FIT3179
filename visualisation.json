{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/malim0406/FIT3179/refs/heads/main/annual-co2-emissions-per-country.csv",  
        "format": {
          "type": "csv"
        }
      },
      "transform": [
        {
          "lookup": "Country",  
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/malim0406/FIT3179/refs/heads/main/ne_110m_admin_0_countries.json",  
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.name", 
            "fields": ["Annual CO2 emissions"]  
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "field": "Annual CO2 emissions",  
          "type": "quantitative",
          "title": "Annual CO₂ Emissions (tons)",
          "scale": {"scheme": "reds"}  
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "Country"},
          {"field": "Annual CO2 emissions", "type": "quantitative", "title": "Annual CO₂ Emissions (tons)"}
        ]
      }
    }
  ]
}

