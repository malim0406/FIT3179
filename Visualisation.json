{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "projection": {"type": "equalEarth"},  // World map projection
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/malim0406/FIT3179/refs/heads/main/ne_110m_admin_0_countries.json",  // Your TopoJSON URL
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"  // Feature name from TopoJSON
          }
        },
        "mark": {
          "type": "geoshape",
          "fill": "#cccccc",
          "stroke": "white"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/malim0406/FIT3179/refs/heads/main/FIFA%20WORLD%20CUP%20DATASET%20COMBINED.csv",  // Your FIFA dataset
          "format": {"type": "csv"}
        },
        "mark": "circle",
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"},
          "size": {"field": "Goals For", "type": "quantitative"},
          "color": {"field": "Team", "type": "nominal"},
          "tooltip": [
            {"field": "Year", "type": "temporal", "title": "World Cup Year"},
            {"field": "Team", "type": "nominal", "title": "Team"},
            {"field": "Goals For", "type": "quantitative", "title": "Goals Scored"}
          ]
        }
      }
    ]
  }
  